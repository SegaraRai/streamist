{
  "Id": "DataPolicy",
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CDNGetFile",
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::<BUCKET_NAME>/*",
      "Condition": {
        "StringEquals": {
          "aws:Referer": "<SECRET_REFERER>"
        }
      }
    }
  ]
}
