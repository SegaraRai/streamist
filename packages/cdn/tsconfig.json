{
  "compilerOptions": {
    "isolatedModules": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "$shared/*": [
        "../shared/src/*",
      ],
      "$shared-server/*": [
        "../shared-server/src/*",
      ],
    },
    "rootDirs": [
      ".",
      "../shared",
      "../shared-server",
    ],
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "types": [
      "@cloudflare/workers-types"
    ]
  }
}
