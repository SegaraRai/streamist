{
  "name": "@streamist/server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm run migrate:dev && run-p dev:*",
    "dev:generate": "frourio -w",
    "dev:build": "node ./build.dev.js",
    "dev:start": "node-dev --respawn ./dist/index_dev.js -- --type=api",
    "dev:start_batch": "node-dev --respawn ./dist/index_dev.js -- --type=batch",
    "prebuild": "pnpm run generate",
    "build": "rollup -c",
    "generate": "run-p generate:*",
    "generate:frourio": "frourio",
    "generate:prisma": "prisma generate && node deleteBadPrismaSchema.js",
    "migrate:dev": "prisma migrate dev && node deleteBadPrismaSchema.js",
    "migrate:dev:createonly": "prisma migrate dev --create-only && node deleteBadPrismaSchema.js",
    "migrate:reset": "prisma migrate reset",
    "typecheck": "tsc --noEmit",
    "pretest": "pnpm run generate",
    "test": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.80.0",
    "@aws-sdk/client-s3": "^3.80.0",
    "@aws-sdk/s3-request-presigner": "^3.80.0",
    "@fastify/helmet": "^8.0.0",
    "@fastify/jwt": "^5.0.0",
    "@google-cloud/tasks": "^2.5.0",
    "@prisma/client": "^3.13.0",
    "aspida": "~1.9.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "close-with-grace": "^1.1.0",
    "cron-parser": "^4.3.0",
    "dotenv": "^16.0.0",
    "fast-json-stringify": "^3.1.0",
    "fast-jwt": "^1.5.4",
    "fastify": "^3.29.0",
    "minimist": "^1.2.6",
    "p-queue": "^7.2.0",
    "pino": "^7.11.0",
    "pino-pretty": "^7.6.1",
    "reflect-metadata": "^0.1.13",
    "thread-stream": "^0.15.2",
    "tsd": "^0.20.0",
    "undici": "^5.0.0",
    "velona": "^0.7.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@segararai/frourio": "^0.25.1-fork.2",
    "@types/busboy": "^1.5.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.11.32",
    "esbuild": "^0.14.38",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-plugin-alias": "^0.2.1",
    "node-dev": "^7.4.3",
    "prisma": "^3.13.0",
    "rollup": "^2.70.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-tsconfig-paths": "^1.1.8",
    "vite": "^2.9.6",
    "vitest": "^0.10.0"
  }
}
