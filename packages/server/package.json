{
  "name": "frourio-app-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run migrate:dev && run-p dev:*",
    "dev:generate": "frourio -w",
    "dev:build": "node ./build.dev.js",
    "dev:start": "node-dev --respawn ./index.js -- --type=api",
    "dev:start_batch": "node-dev --respawn ./index.js -- --type=batch",
    "prebuild": "pnpm run generate",
    "build": "webpack --mode=production",
    "generate": "run-p generate:*",
    "generate:frourio": "frourio",
    "generate:prisma": "prisma generate && node deleteBadPrismaSchema.js",
    "migrate:dev": "prisma migrate dev && node deleteBadPrismaSchema.js",
    "migrate:dev:createonly": "prisma migrate dev --create-only && node deleteBadPrismaSchema.js",
    "migrate:reset": "prisma migrate reset",
    "pm2:start": "pm2 start pm2.config.json --env production",
    "pm2:stop": "pm2 stop pm2.config.json",
    "pm2:delete": "pm2 delete pm2.config.json",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "start": "cross-env NODE_ENV=production node index.js",
    "typecheck": "tsc --noEmit",
    "pretest": "pnpm run generate",
    "test": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.47.0",
    "@aws-sdk/client-s3": "^3.47.0",
    "@aws-sdk/s3-request-presigner": "^3.47.0",
    "@prisma/client": "^3.8.1",
    "aspida": "^1.7.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "close-with-grace": "^1.1.0",
    "dotenv": "^14.2.0",
    "fast-json-stringify": "^3.0.2",
    "fast-jwt": "^1.4.1",
    "fastify": "^3.27.0",
    "fastify-helmet": "^7.0.0",
    "fastify-jwt": "^4.1.3",
    "minimist": "^1.2.5",
    "node-fetch": "^3.1.1",
    "node-schedule": "^2.1.0",
    "p-queue": "^7.1.0",
    "pino": "^7.6.4",
    "pino-pretty": "^7.5.0",
    "pm2": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "tsd": "^0.19.1",
    "velona": "^0.7.0"
  },
  "devDependencies": {
    "@segararai/frourio": "^0.25.1-fork.2",
    "@types/busboy": "^1.3.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.11.19",
    "@types/node-schedule": "^1.3.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.11",
    "esbuild-node-externals": "^1.4.1",
    "node-dev": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.8.1",
    "vite": "^2.7.13",
    "vitest": "^0.1.24"
  }
}
