{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "$shared/*": ["packages/shared/*"],
      "$shared-server/*": ["packages/shared-server/*"],
      "$/*": ["packages/server/*"],
      "$prisma/*": ["packages/server/node_modules/.prisma/*"]
    },
    "rootDir": ".",
    "strict": true
  }
}
