{
  "name": "streamist",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm run migrate:dev && run-p dev:*",
    "dev:client": "pnpm --prefix packages/frontend run dev",
    "dev:server": "pnpm --prefix packages/server run dev",
    "dev:transcoder": "pnpm --prefix packages/transcoder run dev",
    "dev:cdn": "pnpm --prefix packages/cdn run dev",
    "dev:ws": "pnpm --prefix packages/ws run dev",
    "build": "run-s build:*",
    "build:client": "pnpm --prefix packages/frontend run build",
    "build:server": "pnpm --prefix packages/server run build",
    "build:transcoder": "pnpm --prefix packages/transcoder run build",
    "build:cdn": "pnpm --prefix packages/cdn run build",
    "build:ws": "pnpm --prefix packages/ws run build",
    "generate": "run-p generate:*",
    "generate:client": "pnpm --prefix packages/frontend run generate",
    "generate:server": "pnpm --prefix packages/server run generate",
    "lint": "pnpm run lint:js && pnpm run lint:style",
    "lint:js": "eslint --ext .ts,.js,.vue . && prettier --check \"./**/*.{ts,js,vue}\"",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix && prettier --write \"./**/*.{ts,js,vue}\" && pnpm run lint:style -- --fix",
    "migrate:dev": "pnpm --prefix packages/server run migrate:dev",
    "migrate:dev:createonly": "pnpm --prefix packages/server run migrate:dev:createonly",
    "migrate:reset": "pnpm --prefix packages/server run migrate:reset",
    "start": "run-p start:*",
    "start:client": "npm start --prefix packages/frontend",
    "start:server": "npm start --prefix packages/server",
    "pretest": "pnpm run generate",
    "test": "run-s test:*",
    "test:client": "pnpm --prefix packages/frontend run test_ci",
    "test:server": "pnpm --prefix packages/server run test --run",
    "test:shared": "pnpm --prefix packages/shared run test --run",
    "test:shared-server": "pnpm --prefix packages/shared-server run test --run",
    "test_dev": "run-s test_dev:*",
    "test_dev:client": "pnpm --prefix packages/frontend run test_dev",
    "test_dev:server": "pnpm --prefix packages/server run test dev",
    "test_dev:shared": "pnpm --prefix packages/shared run test dev",
    "test_dev:shared-server": "pnpm --prefix packages/shared-server run test dev",
    "pretypecheck": "pnpm run generate",
    "typecheck": "run-s typecheck:*",
    "typecheck:client": "pnpm --prefix packages/frontend run typecheck",
    "typecheck:server": "pnpm --prefix packages/server run typecheck",
    "typecheck:transcoder": "pnpm --prefix packages/transcoder run typecheck",
    "typecheck:cdn": "pnpm --prefix packages/cdn run typecheck",
    "typecheck:ws": "pnpm --prefix packages/ws run typecheck",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,vue}": [
      "stylelint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.6.4",
    "vue-eslint-parser": "^8.3.0"
  }
}
