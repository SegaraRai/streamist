{
  "private": true,
  "scripts": {
    "preview": "vite preview",
    "preview-https": "serve dist",
    "dev": "npm run migrate:dev && run-p dev:*",
    "dev:client": "vite --port 3333 --open",
    "dev:server": "npm run dev --prefix server",
    "dev:aspida": "aspida --watch",
    "build": "run-p build:client build:server",
    "prebuild:client": "npm run generate",
    "build:client": "cross-env NODE_ENV=production vite-ssg build",
    "build:server": "npm run build --prefix server",
    "generate": "run-p generate:*",
    "generate:aspida": "aspida",
    "generate:server": "npm run generate --prefix server",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint --ext .ts,.js,.vue . && prettier --check \"./**/*.ts\"",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix && prettier --write \"./**/*.ts\" && npm run lint:style -- --fix",
    "migrate:dev": "npm run migrate:dev --prefix server",
    "migrate:dev:createonly": "npm run migrate:dev:createonly --prefix server",
    "migrate:reset": "npm run migrate:reset --prefix server",
    "start": "run-p start:*",
    "start:client": "nuxt serve",
    "start:server": "npm start --prefix server",
    "pretest": "npm run generate",
    "test": "jest",
    "pretypecheck": "npm run generate",
    "typecheck": "vue-tsc --noEmit && tsc --noEmit -p server"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@aspida/axios": "^1.7.1",
    "@prisma/client": "^3.5.0",
    "@vueuse/core": "^7.1.2",
    "@vueuse/head": "^0.7.2",
    "axios": "^0.24.0",
    "class-validator": "^0.13.2",
    "core-js": "^3.19.1",
    "frourio": "^0.25.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.4",
    "prism-theme-vars": "^0.2.2",
    "prisma": "^3.5.0",
    "tsd": "^0.19.0",
    "vue": "^3.2.23",
    "vue-demi": "^0.12.1",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.11.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@iconify-json/carbon": "^1.0.11",
    "@intlify/vite-plugin-vue-i18n": "^3.2.1",
    "@types/jest": "^27.0.3",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-vue": "^1.10.1",
    "@vue/compiler-sfc": "^3.2.23",
    "@vue/server-renderer": "^3.2.23",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.3.1",
    "critters": "^0.0.15",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "cypress": "^9.1.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "https-localhost": "^4.7.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "markdown-it-link-attributes": "^3.0.0",
    "markdown-it-prism": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.5.2",
    "unplugin-auto-import": "^0.4.20",
    "unplugin-icons": "^0.12.20",
    "unplugin-vue-components": "^0.17.2",
    "vite": "^2.6.14",
    "vite-plugin-inspect": "^0.3.11",
    "vite-plugin-md": "^0.11.4",
    "vite-plugin-pages": "^0.19.0-beta.6",
    "vite-plugin-pwa": "^0.11.7",
    "vite-plugin-vue-layouts": "^0.5.0",
    "vite-plugin-windicss": "^1.5.3",
    "vite-ssg": "^0.16.2",
    "vue-tsc": "^0.29.6"
  }
}
