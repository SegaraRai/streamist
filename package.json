{
  "private": true,
  "scripts": {
    "dev": "pnpm run migrate:dev && run-p dev:*",
    "dev:client": "pnpm run dev --prefix packages/frontend",
    "dev:server": "pnpm run dev --prefix packages/server",
    "dev:transcoder": "pnpm run dev --prefix packages/transcoder",
    "dev:cdn": "pnpm run dev --prefix packages/cdn",
    "dev:ws": "pnpm run dev --prefix packages/ws",
    "build": "run-s build:*",
    "build:client": "pnpm run build --prefix packages/frontend",
    "build:server": "pnpm run build --prefix packages/server",
    "build:transcoder": "pnpm run build --prefix packages/transcoder",
    "build:cdn": "pnpm run build --prefix packages/cdn",
    "build:ws": "pnpm run build --prefix packages/ws",
    "generate": "run-p generate:*",
    "generate:client": "pnpm run generate --prefix packages/frontend",
    "generate:server": "pnpm run generate --prefix packages/server",
    "lint": "pnpm run lint:js && pnpm run lint:style",
    "lint:js": "eslint --ext .ts,.js,.vue . && prettier --check \"./**/*.{ts,js,vue}\"",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix && prettier --write \"./**/*.{ts,js,vue}\" && pnpm run lint:style -- --fix",
    "migrate:dev": "pnpm run migrate:dev --prefix packages/server",
    "migrate:dev:createonly": "pnpm run migrate:dev:createonly --prefix packages/server",
    "migrate:reset": "pnpm run migrate:reset --prefix packages/server",
    "start": "run-p start:*",
    "start:client": "npm start --prefix packages/frontend",
    "start:server": "npm start --prefix packages/server",
    "pretest": "pnpm run generate",
    "test": "run-s test:*",
    "test:client": "pnpm run test_ci --prefix packages/frontend",
    "test:server": "pnpm run test --prefix packages/server -- --run",
    "test:shared": "pnpm run test --prefix packages/shared -- --run",
    "test:shared-server": "pnpm run test --prefix packages/shared-server -- --run",
    "pretypecheck": "pnpm run generate",
    "typecheck": "run-s typecheck:*",
    "typecheck:client": "pnpm run typecheck --prefix packages/frontend",
    "typecheck:server": "pnpm run typecheck --prefix packages/server",
    "typecheck:transcoder": "pnpm run typecheck --prefix packages/transcoder",
    "typecheck:cdn": "pnpm run typecheck --prefix packages/cdn",
    "typecheck:ws": "pnpm run typecheck --prefix packages/ws",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,vue}": [
      "stylelint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.2.5",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-unicorn": "^41.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.3.0",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.6.2",
    "vue-eslint-parser": "^8.3.0"
  }
}
