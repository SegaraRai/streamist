{
  "private": true,
  "scripts": {
    "dev": "npm run migrate:dev && run-p dev:*",
    "dev:client": "npm run dev --prefix packages/frontend",
    "dev:server": "npm run dev --prefix packages/server",
    "dev:transcoder": "npm run dev --prefix packages/transcoder",
    "build": "run-p build:client build:server",
    "build:client": "npm run build --prefix packages/frontend",
    "build:server": "npm run build --prefix packages/server",
    "build:transcoder": "npm run build --prefix packages/transcoder",
    "generate": "run-p generate:*",
    "generate:client": "npm run generate --prefix packages/frontend",
    "generate:server": "npm run generate --prefix packages/server",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint --ext .ts,.js,.vue . && prettier --check \"./**/*.{ts,js,vue}\"",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix && prettier --write \"./**/*.{ts,js,vue}\" && npm run lint:style -- --fix",
    "migrate:dev": "npm run migrate:dev --prefix packages/server",
    "migrate:dev:createonly": "npm run migrate:dev:createonly --prefix packages/server",
    "migrate:reset": "npm run migrate:reset --prefix packages/server",
    "start": "run-p start:*",
    "start:client": "npm start --prefix packages/frontend",
    "start:server": "npm start --prefix packages/server",
    "pretest": "npm run generate",
    "test": "jest",
    "pretypecheck": "npm run generate",
    "typecheck": "run-p typecheck:*",
    "typecheck:client": "npm run typecheck --prefix packages/frontend",
    "typecheck:server": "npm run typecheck --prefix packages/server",
    "typecheck:transcoder": "npm run typecheck --prefix packages/transcoder"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.12.2",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@nuxtjs/eslint-config-typescript": "^8.0.0",
    "@types/jest": "^27.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "ts-jest": "^27.1.1"
  }
}
